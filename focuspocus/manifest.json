{
    "manifest_version": 3,
    "name": "Focus-Pocus!",
    "description": "Boost your productivity! Easily focus on a web page while temporarily blocking distractions.",
    "version": "1.0",
    "action":
    {
        "_comment": "code for the little window?", 
        "default_popup": "popup/popup.html"

    },
    "icons":
    {
        "16": "images/focuspocuscircle.png",
        "32": "images/focuspocuscircle.png",
        "48": "images/focuspocuscircle.png",
        "128":"images/focuspocuscircle.png"
    },
    "background":
    {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions":
    [
        "storage",
        "tabs"
    ]
}